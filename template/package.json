{
  "name": "PROJECT_NAME",
  "version": "0.0.1",
  "description": "DESCRIPTION",
  "main": "server.js",
  "private": true,
  "dependencies": {
    "pg.js": "3.5.x",
    "request": "2.42.x",
    "sprintf": "0.1.x"
  },
  "devDependencies": {
    "browserify": "5.11.x",
    "font-awesome-stylus": "1.2.x",
    "i18n-js": "1.0.x",
    "jasmine": "2.0.x",
    "jscs": "1.6.x",
    "jshint": "2.5.x",
    "jshint-full-path": "1.1.x",
    "nib": "1.0.x",
    "nock": "0.46.x",
    "nodemon": "1.2.x",
    "normalize.css": "3.0.x",
    "stylus": "0.49.x",
    "supertest": "0.13.x",
    "uglify-js": "2.3.x"
  },
  "config": {
    "port": "8080"
  },
  "scripts": {
    "prepublish": "npm run clean && npm run copy-fonts && npm run build-sass && npm run build-js && npm test",
    "pretest": "npm run lint && npm run checkStyle",
    "test": "jasmine",
    "start": "node server.js",

    "clean": "bash -c \"mkdir -p tmp && mkdir -p public/fonts\"",
    "build": "npm run prepublish",
    "concat-css": "cat node_modules/normalize.css/normalize.css tmp/bundle.css >> public/bundle.css",
    "build-css": "stylus stylesheets/main.styl -I node_modules/font-awesome-stylus/stylus -I node_modules/nib/lib/nib -o tmp/bundle.css",
    "copy-fonts": "cp node_modules/font-awesome/fonts/* public/fonts",
    "build-js": "browserify src/main.js | uglifyjs -mc > public/bundle.js",
    "lint": "jshint src spec server.js --reporter=node_modules/jshint-full-path/index.js",
    "checkStyle": "jscs src spec",

    "watch": "npm run watch-test & npm run watch-sass & npm run watch-js",
    "watch-css": "nodemon -w sass -e scss --exec \"npm run debug-sass\"",
    "watch-js": "nodemon -w src -e js -x \"node_modules/.bin/browserify --debug -o public/bundle.js src/main.js\"",
    "watch-test": "nodemon -w spec -e js -x \"node_modules/.bin/jasmine\"",
    "watch-start": "nodemon --debug",
    "test-nodemon": "nodemon -w . -x \"npm -v\"",

    "debug-css": "npm run build-sass -- --sourcemap --line-numbers"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:PhilT/PROJECT_NAME.git"
  },
  "author": "Phil Thompson",
  "bugs": {
    "url": "https://github.com/PhilT/PROJECT_NAME/issues"
  },
  "homepage": "https://github.com/PhilT/PROJECT_NAME"
}
